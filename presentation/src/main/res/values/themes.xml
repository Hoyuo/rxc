    <style name="RXCTheme.ActionBar">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/navigation_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RXCTheme.Product" />

    <style name="RXCTheme.Product.Name">
        <item name="android:textSize">15dp</item>
